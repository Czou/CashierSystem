<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
         <LinearLayout 
        android:layout_above="@+id/login_layout_v_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:background="@drawable/login_bg"
        android:gravity="center"
        android:orientation="horizontal">
         </LinearLayout>
       <TextView 
           android:layout_centerVertical="true"
           android:id="@+id/login_layout_v_center"
           style="@style/whiteHDividerLine2DP"/>
    <LinearLayout 
        android:layout_below="@+id/login_layout_v_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
             <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"></LinearLayout>
         <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/cashier_system_column_title"
        android:layout_marginRight="@dimen/cashier_system_column_title"
        android:background="@color/white"
        android:orientation="vertical">
         <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_text_height"
        android:gravity="center_vertical"
        android:background="@color/gainsboro"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="@dimen/input_text_height"
            android:layout_height="@dimen/input_text_height"
            android:contentDescription="@string/viewContentDescript"
            android:src="@drawable/user"
            android:padding="10dp"
            android:background="@color/red_color"
            />
        <EditText 
            android:id="@+id/user_name"
            android:layout_margin="@dimen/split_line_height"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:background="@color/white"
            android:textColor="@android:color/black"
            android:hint="@string/user_name_hint"
            />
    </LinearLayout>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_text_height"
        android:layout_marginTop="10dp"
        android:background="@color/gainsboro"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="@dimen/input_text_height"
            android:layout_height="@dimen/input_text_height"
            android:contentDescription="@string/viewContentDescript"
            android:src="@drawable/password"
            android:padding="10dp"
            android:background="@color/red_color"
            />
        <EditText 
            android:id="@+id/user_password"
            android:layout_margin="@dimen/split_line_height"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black"
            android:background="@color/white"
            android:hint="@string/user_password_hint"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
         <TextView 
            android:id="@+id/user_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:background="@drawable/red_coner_bg"
            android:text="@string/user_login"
            android:textSize="@dimen/fontSize_18"
            android:textColor="@android:color/white"/>
         <TextView 
            android:id="@+id/user_reset"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:background="@drawable/gray_light_coner_bg"
            android:text="@string/user_reset"
            android:textSize="@dimen/fontSize_18"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"></LinearLayout>
    </LinearLayout>
    </RelativeLayout>
